<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="5dp"
    card:cardElevation="4dp"
    android:layout_margin="10dp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/cardTitle"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="24dp"
            android:layout_rowSpan="2"/>
        <TextView
            android:id="@+id/cardDate"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Date"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:textColor="#959393"
            android:layout_columnSpan="2"/>
        <TextView android:id="@+id/cardActivityType"
            android:layout_column="2" android:layout_row="1" android:textSize="14dp"
            android:textColor="#959393" android:text="Activity" android:layout_rowWeight="1"
            android:gravity="right"/>


        <TextView android:text="Distance" android:textSize="16dp" android:textColor="#000000"
            android:layout_row="2" android:layout_column="0"
            android:layout_gravity="center"/>
        <TextView android:text="Time" android:textSize="16dp" android:textColor="#000000"
            android:layout_row="2" android:layout_column="1"
            android:layout_gravity="center" />
        <TextView android:text="Elevation" android:textSize="16dp" android:textColor="#000000"
            android:layout_row="2" android:layout_column="2"  />


        <TextView android:text="Distance" android:textSize="12dp" android:textColor="#959393"
            android:layout_row="3" android:layout_column="0"
            android:layout_gravity="center"
            android:id="@+id/cardDistance"/>
        <TextView android:text="Time" android:textSize="12dp" android:textColor="#959393"
            android:layout_row="3" android:layout_column="1"
            android:layout_gravity="center"
            android:id="@+id/cardTime"/>
        <TextView android:text="Elevation" android:textSize="12dp" android:textColor="#959393"
            android:layout_row="3" android:layout_column="2"
            android:id="@+id/cardElevation"/>
    </GridLayout>

</androidx.cardview.widget.CardView>