<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    card:cardCornerRadius="10dp"
    android:layout_margin="5dp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="9"
        android:columnCount="7"
        android:id="@+id/monthGrid">
        <TextView android:layout_column="0" android:layout_row="0" android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal" android:id="@+id/monthCollapse" android:text="â†‘"
            android:textColor="@color/colorPrimary" android:textSize="18dp"/>
        <TextView android:layout_columnSpan="5" android:layout_column="1" android:layout_row="0"
            android:text="Month Name" android:textSize="18dp" android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal" android:id="@+id/monthViewName" android:layout_columnWeight="1"/>
        <TextView android:layout_column="0" android:layout_row="1" android:text="@string/mon" android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1" />
        <TextView android:layout_column="1" android:layout_row="1" android:text="@string/tue" android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1" />
        <TextView android:layout_column="2" android:layout_row="1" android:text="@string/wed" android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"/>
        <TextView android:layout_column="3" android:layout_row="1" android:text="@string/thu" android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"/>
        <TextView android:layout_column="4" android:layout_row="1" android:text="@string/fri" android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"/>
        <TextView android:layout_column="5" android:layout_row="1" android:text="@string/sat" android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"/>
        <TextView android:layout_column="6" android:layout_row="1" android:text="@string/sun" android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000" android:layout_columnSpan="7"
            android:layout_row="2"/>
    </GridLayout>

</androidx.cardview.widget.CardView>